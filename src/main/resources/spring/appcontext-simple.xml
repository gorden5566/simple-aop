<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="com.gorden5566.aop.simple.AopProxyBeanPostProcessor"/>
    <bean class="com.gorden5566.aop.simple.aspect.TestAspect"/>
    <bean class="com.gorden5566.aop.simple.aspect.NoInterfaceAspect"/>

    <bean id="helloService" class="com.gorden5566.aop.simple.service.impl.HelloServiceImpl"/>
    <bean id="testService" class="com.gorden5566.aop.simple.service.impl.TestServiceImpl"/>
    <bean id="noInterface" class="com.gorden5566.aop.simple.service.impl.NoInterfaceImpl"/>

</beans>